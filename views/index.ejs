<!-- index.ejs -->
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1>
      <%= title %>
    </h1>

    <button <h2><a href="new">Create A New Message</h2></a></button>

    <div class="card">
      <% for (let i = 0; i < messages.length; i++) { %>
          <b><%= messages[i].name %>:</b> <%= messages[i].text %> 
          <br>
          <p><smaller><%= messages[i].added %></smaller></p>
          <br>
          <button>
            <a href="/details/<%= messages[i].id %>">View Details</a>
          </button> 
      <% } %>
      </div>
    
    <%- include('footer'); %>
  </body>
</html>
